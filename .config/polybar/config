[colors]
background = "#0F0F0F"
foreground = "#F0F0F0"
colorhighlighted = "#98ff98"
texthighlighted = "#0F0F0F"

[bar/mybar]
override-redirect = false
wm-restack = bspwm
bottom = false
fixed-center = true
width = 100%
height = 25
background = ${colors.background}
foreground = ${colors.foreground}
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0

; Number of spaces to add at the beginning/end of the bar
padding = 0

; Number of spaces to add before/after each module
module-margin = 1

; Fonts are defined using <font-name>;<vertical-offset>
font-0 = "Ubuntu Mono:style=Regular:size=12:1:antialias=true; 2"
font-1 = "Wuncon Siji:size=9;3"

; Modules are added to one of the available blocks
modules-left = bspwm
modules-right = fs gpu temp date

;separator =
; This value is used to add extra spacing between elements
; @deprecated: This parameter will be removed in an upcoming version
spacing = 0
; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 1.0

; Position of the system tray window
tray-position = right
tray-maxsize = 15
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
; Pad the sides of each tray icon
tray-padding = 0

[global/wm]
margin-bottom = 0
margin-top = 0

[settings]
label-focused-underline= ${colors.background}
throttle-output = 5
throttle-output-for = 10
; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30label-focused-underline= ${colors.red}
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true
; Enables pseudo-transparency for the bar
; If set to true the bar can be transparent without a compositor.
pseudo-transparency = false

[module/bspwm]
type = internal/bspwm
label-focused-background = ${colors.colorhighlighted}
label-focused-foreground = ${colors.texthighlighted}
label-focused = %name%
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 2
label-empty =
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/date]
type = internal/date
interval = 5
time = %A, %B %d - %I:%M %p
label =  %time%
label-foreground = ${colors.colorhighlighted}
label-padding = 1

[module/fs]
type = internal/fs
mount-0 = /
interval = 60
fixed-values = false
format-mounted = <label-mounted>
label-mounted = %mountpoint% | %free%

# for integrated graphics
#[module/gpu]
#type = custom/script
#exec = cat /sys/devices/pci0000:00/0000:00:08.1/0000:09:00.0/hwmon/hwmon2/temp1_input | head -c 2
#interval = 5
#format-prefix = "GPU:"
#label = %output%

# for rx580
[module/gpu]
type = custom/script
exec = cat /sys/class/hwmon/hwmon3/temp1_input | head -c 2
interval = 5
format-prefix = "GPU:"
label = %output%


[module/temp]
type = custom/script
exec = cat /sys/class/hwmon/hwmon1/temp1_input | head -c 2
interval = 5
format-prefix = "CPU:"
label = %output%

;[module/gputemp]
;type = custom/script
;exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader
;format-prefix = "GPU:"
;label = %output%
